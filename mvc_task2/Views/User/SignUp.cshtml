@model mvc_task2.Models.UserModel


@{
    ViewBag.Title = "SignUp";
}

<div class="row">
    <div class="col-md-8" >
        <h4>SignUp</h4>
        <form method="post" action="@Url.Action("SignUp","User")" class="form-horizontal">
            <div class="form-group">
                <label for="UserName" class="control-label">User Name</label>
                @Html.TextBoxFor(model => Model.UserName, htmlAttributes: new
           {
               @class = "form-control"
           })
            </div>

            <div class="form-group">
                <label for="Email Id" class="control-label">Email Id</label>
                @Html.TextBoxFor(model => Model.EmailId, htmlAttributes: new
           {
               @class = "form-control"
           })
            </div>

            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                @Html.PasswordFor(model => Model.Password, htmlAttributes: new
           {
               @class = "form-control"
           })
            </div>

            <div class="form-group">
                <label for="Confirm Password" class="control-label">Confirm Password</label>
                @Html.PasswordFor(model => Model.ConfirmPassword, htmlAttributes: new
           {
               @class = "form-control"
           })
            </div>

            <div class="form-group">
                <label for="Mobile Number" class="control-label">Mobile Number</label>
                @Html.TextBoxFor(model => Model.MobileNumber, htmlAttributes: new
           {
               @class = "form-control"
           })
            </div>

            <div class="form-group">
                <label for="Mobile Number" class="control-label">Mobile Number</label>
                <input type="file" class="form-control" name="userImageUrl" id="UserImageUrl" />
            </div>


            <div class="form-group">
                <label for="Gender" class="control-label">Select Gender</label>
                <input type="radio" name="Gender" id="maleGender" value="male" class="radio-inline" />Male
                <input type="radio" name="Gender" id="femaleGender" value="female" class="radio-inline" />Female
            </div>

            <div class="form-group">
                <label for="Select Country" class="control-label">User Country</label>
                @Html.DropDownList("CountryId", (IEnumerable<SelectListItem>)(ViewBag.countryDataSaurce), "Select Country", new { @class = "form-control" })
            </div>


            <div class="form-group">
                <label for="Select State" class="control-label">User Mobile</label>
                @Html.DropDownList("StateId", (IEnumerable<SelectListItem>)(ViewBag.stateDataSaurce), "Select State", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <button  class="btn btn-primary" type="submit">Submit</button>
                </div>

        </form>
    </div>
    <div class="col-md-4">
        <h4>SignIn</h4>
        <form method="post" action="@Url.Action("SignIn","User")" class="form-horizontal">

            <div class="form-group">
                <label for="UserName" class="control-label">User Name</label>
                @Html.TextBoxFor(model => Model.UserName, htmlAttributes: new
           {
               @class = "form-control"
           })
            </div>

            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                @Html.PasswordFor(model => Model.Password, htmlAttributes: new
           {
               @class = "form-control"
           })
            </div>


            <div class="form-group">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>

        </form>
    </div>
</div>
